{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "outDir": "./lib/",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES6", "ES2017", "DOM"],
  },
  "compileOnSave": false,
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
